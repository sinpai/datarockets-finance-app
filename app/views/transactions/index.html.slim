.row
  .col-md-10
    h5
      = render partial: 'balance' if current_user
.row
  .col-md-10
    h3.header.text-center= t('.activity_header')
  .col-md-2
    = link_to 'New transaction', new_transaction_path, { remote: true, 'data-toggle' => "modal", 'data-target' => '#modal-window', class: 'btn btn-info pull-right' }

= search_form_for @search, url: search_transactions_path, method: :post do |f|
  = f.label :date
  div.input-group
    = f.text_field :date_gteq, class: 'form-control'
    span class='input-group-addon'
      | to
    = f.text_field :date_lteq, class: 'form-control'
    = f.submit t('.search'), class: 'btn btn-primary input-group-addon'

hr.my-4

.row
  = render 'transactions'

= will_paginate(@transactions)

